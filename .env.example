# Domain Configuration
DOMAIN=home.arpa

# Service Subdomains
AGENT_SUBDOMAIN=agent
CHAT_SUBDOMAIN=chat
LUMA_SUBDOMAIN=luma
N8N_SUBDOMAIN=n8n
PORTAINER_SUBDOMAIN=portainer
TRAEFIK_SUBDOMAIN=traefik

# Container Configuration
## Internal Container Ports (used by services and Traefik)
AGENT_CONTAINER_PORT=80
CHAT_CONTAINER_PORT=8080    # Open-WebUI runs on 8080 internally
LUMA_CONTAINER_PORT=8000    # Astroluma runs on 8000 internally
N8N_CONTAINER_PORT=5678
PORTAINER_CONTAINER_PORT=9000
POSTGRES_CONTAINER_PORT=5432
MONGODB_CONTAINER_PORT=27017
TRAEFIK_DASHBOARD_PORT=8080

## External Host Ports (for port forwarding)
AGENT_HOST_PORT=8080
CHAT_HOST_PORT=3000
LUMA_HOST_PORT=8081
N8N_HOST_PORT=5678
PORTAINER_HOST_PORT=9000
POSTGRES_HOST_PORT=5433
MONGODB_HOST_PORT=27017
TRAEFIK_HOST_PORT_HTTP=8088
TRAEFIK_HOST_PORT_HTTPS=8443
TRAEFIK_CONTAINER_PORT_HTTP=80
TRAEFIK_CONTAINER_PORT_HTTPS=443

## Composed Port Mappings (automatically constructed, DO NOT EDIT)
AGENT_PORT=${AGENT_HOST_PORT}:${AGENT_CONTAINER_PORT}
CHAT_PORT=${CHAT_HOST_PORT}:${CHAT_CONTAINER_PORT}
LUMA_PORT=${LUMA_HOST_PORT}:${LUMA_CONTAINER_PORT}
N8N_PORT=${N8N_HOST_PORT}:${N8N_CONTAINER_PORT}
PORTAINER_PORT=${PORTAINER_HOST_PORT}:${PORTAINER_CONTAINER_PORT}
TRAEFIK_PORT_HTTP=${TRAEFIK_HOST_PORT_HTTP}:${TRAEFIK_CONTAINER_PORT_HTTP}
TRAEFIK_PORT_HTTPS=${TRAEFIK_HOST_PORT_HTTPS}:${TRAEFIK_CONTAINER_PORT_HTTPS}

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password
MONGODB_PASSWORD=your_secure_mongodb_password
# n8n Configuration
N8N_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Open-WebUI Configuration
OPENWEBUI_SECRET_KEY=your_secure_openwebui_secret_key_here

# Ollama Configuration
OLLAMA_HOST=host.docker.internal
OLLAMA_PORT=11434

# Prometheus Configuration
PROMETHEUS_PORT=9090
# Additional Service Configurations
AGENT_MEMORY_LIMIT=12g     # For AI processing
CHAT_MEMORY_LIMIT=12g      # For large language models
LUMA_MEMORY_LIMIT=6g      # For image processing
N8N_MEMORY_LIMIT=4g       # For workflow automation
PORTAINER_MEMORY_LIMIT=2g # For container management
TRAEFIK_MEMORY_LIMIT=1g # For reverse proxy and SSL termination
POSTGRES_MEMORY_LIMIT=2g  # For database operations
MONGODB_MEMORY_LIMIT=2g   # For database operations
PROMETHEUS_MEMORY_LIMIT=2g # For monitoring

# Network Configuration
TRAEFIK_NETWORK=traefik_network
DOCKER_SUBNET=172.20.0.0/16

# Backup Configuration (optional)
NAS_IP=192.168.1.100
NAS_USER=backup_user
BACKUP_DIR=/volume1/backups/docker_backups